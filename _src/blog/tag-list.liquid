<section>
<hgroup>
  <h1>Tags</h1>
  <p>All my <a href="/blog/">posts</a> organised by the tags</p>
</hgroup>
</section>
<hr>
<section>
{% for tag in collections.allTags %}
  <h2><a href="/blog/tags/{{tag[0]}}" class="tag">{{tag[0]}}</a></h2>
  {% for post in tag[1] %}
    <li><a href="{{post.url}}">{{ post.data.title }}</a></li>
    
  {% endfor %}
{% endfor %}
</section>
  
